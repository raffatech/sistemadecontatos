@model UsuarioViewModel

@{
    ViewData["Title"] = "Alerta de exclusão"; //nome que vai aparecer na aba da pagina
}

@if (Model != null)
{
    <div style="margin-top: 100px;" class="text-center">
        <h3>Realmente deseja apagar o usuario @Model.Nome?</h3>

        <a style="margin-top: 20px;" class="btn btn-primary btn-block" style="margin-right: 50px;" role="button" asp-controller="Usuario" asp-action="ListagemUsuario">Cancelar exclusão</a>
        <a style="margin-top: 20px;" class="btn btn-danger btn-block" style="margin-right: 50px;" role="button" asp-controller="Usuario" asp-route-id="@Model.Id" asp-action="ExcluirUsuario">Confirmar exclusão</a>
    </div>
    /* asp-route-id="@Model.Id" Aqui passa o id que quero apagar para o controller action apagar */


}
